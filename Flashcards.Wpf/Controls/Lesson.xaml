<UserControl x:Class="Flashcards.Wpf.Lesson"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flashcards.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Black" BorderThickness="1" Margin="2" Padding="2">
        <StackPanel>
            <TextBlock Text="{Binding LessonName}"/>
            <Button Margin="0 2" Command="{Binding OpenLessonCommand}">Open lesson</Button>
        </StackPanel>
    </Border>
</UserControl>
