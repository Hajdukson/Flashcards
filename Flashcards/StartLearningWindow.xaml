<Window x:Class="Flashcards.StartLearningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flashcards"
        mc:Ignorable="d"
        Title="StartLearningWindow" Height="450" Width="800">
    <StackPanel>
        <Label x:Name="drawnWord"/>
        <TextBox x:Name="enteredWord"/>
        <TextBlock x:Name="description"/>
        <Button Content="Check Word" Click="Check_Word"/>
    </StackPanel>
</Window>
