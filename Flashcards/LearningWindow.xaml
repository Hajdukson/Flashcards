<Page x:Class="Flashcards.LearningWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Flashcards"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LearningWindow">

    <StackPanel Margin="0,40,0,0">

        <Button Content="Start Learning" Width="120" FontSize="19" Click="Start_Learning"/>
        <Button Content="Edit Word" Width="120" FontSize="20" Margin="5" Click="Edit_Word"/>
        <Button Content="Add Word" Width="120" FontSize="20" Click="Add_Word"/>
        <TextBox Text="Word" Width="160" FontSize="18" TextAlignment="Center" x:Name="Foreign" Margin="5"/>
        <TextBox Text="Meaning" Width="160" FontSize="18" TextAlignment="Center" x:Name="Meaning" Margin="5"/>
        <TextBox Text="Some notes" Width="200" Height="200" FontSize="16" TextAlignment="Center" x:Name="Description" Margin="5" TextWrapping="Wrap"/>

    </StackPanel>
</Page>
