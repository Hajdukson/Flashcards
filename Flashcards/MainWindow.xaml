<Window x:Class="Flashcards.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flashcards"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350"
        WindowStyle="None"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown">
    <Grid>

        <StackPanel Margin="0,60,0,0">
            <Button Content="Add lesson" Width="120" FontSize="20" Margin="10" Click="Add_lesson"/>
            <TextBox Text="Name the lessons" Width="160" FontSize="18" TextAlignment="Center" x:Name="LessonName"/>
            <Button Content="Select lesson" Width="120" FontSize="20" Margin="0,10,0,0" Click="Select_lesson"/>
            <Button Content="Exit" Width="120" FontSize="20" Margin="10" Click="Exit_Button"/>
        </StackPanel>
        <TextBlock FontSize="15" Margin="10" VerticalAlignment="Bottom">Fleshcards by Michał Hajduk</TextBlock>
    </Grid>

</Window>